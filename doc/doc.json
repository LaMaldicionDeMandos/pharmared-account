                ]
            }
        },
        "pharmacist_form": {
            "type": "object",
            "required": [
                "enrollment",
                "cuit",
                "email",
                "profile"
            ],
            "properties": {
                "enrollment": {
                    "type": "string"
                },
                "cuit": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "profile": {
