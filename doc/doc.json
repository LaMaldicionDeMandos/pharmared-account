                }
            }
        },
        "user_and_pharmacist": {
            "type": "object",
            "properties": {
                "pharmacist": {
                    "type": "object",
                    "properties": {
                        "_id": {
                            "type": "string"
                        },
                        "__v": {
                            "type": "integer"
